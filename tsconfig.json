{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		// "baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": false,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["es2020", "dom"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noImplicitAny": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"target": "ES2020",
		"types": ["vitest/globals"],
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*"]
}
