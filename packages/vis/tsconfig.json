{
	"compilerOptions": {
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": false,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM.Iterable", "dom"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noImplicitAny": true,
		"rootDir": "src",
		"outDir": "esm",
		"skipLibCheck": true,
		"target": "ES2020",
		"types": ["@vitest/browser/providers/playwright"],
		"verbatimModuleSyntax": true
	},
	"include": ["src"]
}
